@model IEnumerable<AutonoFit.Models.ClientProgram>

@{
    ViewData["Title"] = "Programs List";
}

<style>
    h1 {
        color: white;
        font-weight: 800;
        text-shadow: 10px 2px 15px blue;
        margin-bottom: 20px;
        text-align: left;
    }
    .btn-green {
        text-align: center;
        background-color: rgba(49, 213, 207, 0.9);
        box-shadow: rgba(16, 70, 70, .8) 0px 10px 7px;
        border-radius: 3px;
        border: none;
        color: whitesmoke;
        font-size: large;
        padding: 5px 20px 5px 20px;
    }

    .btn-fun {
        text-align: center;
        background-color: rgba(30, 90, 255, .9);
        box-shadow: rgba(10, 30, 85, .8) 0px 10px 7px;
        border-radius: 3px;
        border: none;
        color: whitesmoke;
        font-size: large;
        padding: 5px 20px 5px 20px;
    }
</style>

<div class="row" style="margin-top: 8%;">
    <div class="col-md-2"></div>
    <div class="col-md-7">
        <h1>Select Program To Continue</h1>
    </div>
    <div class="col-md-3" style="margin-top: 17px;">
        <a class="btn-fun" asp-action="Index" >Back</a>
    </div>
</div>

<table class="table" style="background-color: rgba(30, 90, 255, .9); box-shadow: rgba(10, 30, 85, .8) 0px 10px 7px; 0px 10px 7px; color: white;">
    <thead>
        <tr>     
            <th>
                Program Name
            </th>       
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ProgramName
            </td>
            <td>
                @item.ProgramStart.Date.ToString("MM/dd/yy")
            </td>
            <td>
                <div class="row">
                    <div>
                        <form asp-action="ProgramOverview">
                            <input type="hidden" asp-for="@item.ProgramId" name="programId" />
                            <input type="submit" class="btn-green" value="Select" style="margin-right: 5px;" />
                        </form>
                    </div>
                    <div>
                        <form asp-action="DeleteProgram">
                            <input type="hidden" asp-for="@item.ProgramId" name="id" />
                            <input type="submit" class="btn-green" value="Delete" />
                        </form>
                    </div>
                </div>  
            </td>
        </tr>
}
    </tbody>
</table>
