@model AutonoFit.Models.Client


    <link rel="stylesheet" href="~/css/Create.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
    $(document).ready(function () {
            alert("By completing the account creation process, you acknowledge the inherent risks of performing fitness activities, and understand that Autonofit is in " +
                "now way responsible for injuries that may occur. You also acknowledge that any exercise suggested by the application should be declined if perceived to be dangerous, " +
                "as AutonoFit does not adequately replace the expertise and guidance of a licensed professional.");
        });
    </script>

@{
    ViewData["Title"] = "Create";
}

<style>
 
</style>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-7">
        <h1>Create Account</h1>
    </div>
</div>


<form asp-action="Create">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-7 box-thing">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Month</label>
                <input asp-for="BirthMonth" min="1" max="12" value="1" class="form-control" />
                <span asp-validation-for="BirthMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Day</label>
                <input asp-for="BirthDay" min="1" max="31" value="1" class="form-control" />
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Year</label>
                <input asp-for="BirthYear" value="1990" min="1900" max="@DateTime.Now.Year" class="form-control" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn-fun" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
