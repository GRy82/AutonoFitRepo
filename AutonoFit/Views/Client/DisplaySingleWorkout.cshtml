@model AutonoFit.ViewModels.SingleWorkoutVM

@{
    ViewData["Title"] = "Workout";
}

<link rel="stylesheet" href="~/css/SingleWorkout.css" />

<style>
    .btn-fun {
        text-align: center;
        background-color: rgba(30, 90, 255, .9);
        box-shadow: rgba(10, 30, 85, .8) 0px 10px 7px;
        border-radius: 3px;
        border: none;
        color: whitesmoke;
        font-size: large;
        padding: 5px 20px 5px 20px;
        margin-top: 45px;
    }
</style>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <h1 style="color: white; font-weight: 800; text-shadow: 10px 2px 15px red;">@ViewData["Title"]</h1>
    </div>
</div>

<hr />
<div class="container">
    <table class="table table-dark table-hover lift-table">
        <tr>
            <th>Exercise Name</th>
            <th>Description</th>
            <th>Sets</th>
            <th>Repetitions</th>
            <th>Rest Time</th>
        </tr>
        <tbody>
            @foreach (var exercise in Model.Exercises)
            {
                <tr>
                    <td>@exercise.name</td>
                    <td><details style="max-width: 60%;"><summary>Instructions</summary>@exercise.description</details></td>
                    <td>@Model.fitnessDictionary.sets</td>
                    <td>@Model.fitnessDictionary.reps</td>
                    <td>@Model.fitnessDictionary.restString</td>
                </tr>
            }
        </tbody>
    </table>
    <br />

    @if (Model.fitnessDictionary.cardio == true)
    {
        <div class="cardio-zone col-md-6">
            <h3 style="margin-bottom: 30px;">Today's Cardio</h3>
            <dl class="row">
                <dt class="col-md-6">Target Distance: </dt>
                <dd class="col-md-6">@Model.fitnessDictionary.distanceMiles.ToString("#.##") miles</dd>
                <dt class="col-md-6">Target Duration: </dt>
                <dd class="col-md-6">@Model.fitnessDictionary.durationString</dd>
                <dt class="col-md-6">Target Pace: </dt>
                <dd class="col-md-6">@Model.fitnessDictionary.paceString</dd>
            </dl>
        </div>
    }

    <form asp-action="CompleteSingleWorkout" style="top: 30px;">
        <input type="submit" class="btn-fun" value="Complete Workout" />
    </form>


</div>


