@model AutonoFit.Models.Client

@{
    ViewData["Title"] = "AutonoFit";
}

<link rel="stylesheet" href="~/css/FitZone.css" />

<style>
    h1 {
        color: white;
        font-weight: 800;
        text-shadow: 10px 2px 15px red;
        text-align: center;
        margin-top: 12%;
    }
</style>

<h1>Nothing Holding You Back</h1>

<div class="row" style="margin-top: 9%;">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="SingleWorkoutSetup" method="get">
            <input type="submit" class="btn-lg btn-FitZone" id="new-workout" style="justify-content: center;" value="New Workout" />
        </form>
    </div>
    <div class="col-lg-3">    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="ProgramSetup">
            <input type="submit" class="btn-lg btn-FitZone" id="new-program" value="New Program"/>
        </form>
        <form asp-action="ProgramsList">
            <input type="hidden" asp-for="@Model.ClientId" name="clientId"/>
            <input type="submit" class="btn-lg btn-FitZone" id="continue-program" value="Continue"/>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>



